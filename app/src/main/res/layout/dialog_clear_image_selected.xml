<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dialogCoverColor">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="44dp"
        android:layout_marginEnd="44dp"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/dialogTopHeaderColor"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:text="@string/clear_all_images_selected"
                android:textColor="@color/dialogWhiteColor"
                android:textSize="14sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/dialogBodyColor"
                android:gravity="center"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:text="@string/are_you_sure"
                android:textColor="@color/dialogWhiteColor" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dialogGuidelineColor" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/dialogBodyColor">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/bg_dialog_border"
                    android:gravity="center"
                    android:paddingStart="16dp"
                    android:paddingTop="3dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="3dp"
                    android:text="@string/yes"
                    android:textAllCaps="true"
                    android:textColor="@color/dialogWhiteColor"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/btn_yes"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="?android:selectableItemBackground"
                    app:layout_constraintBottom_toBottomOf="@id/tv_yes"
                    app:layout_constraintEnd_toEndOf="@id/tv_yes"
                    app:layout_constraintStart_toStartOf="@id/tv_yes"
                    app:layout_constraintTop_toTopOf="@id/tv_yes" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/bg_dialog_border"
                    android:gravity="center"
                    android:paddingStart="19dp"
                    android:paddingTop="3dp"
                    android:paddingEnd="19dp"
                    android:paddingBottom="3dp"
                    android:text="@string/no"
                    android:textAllCaps="true"
                    android:textColor="@color/dialogWhiteColor"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/btn_no"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="?android:selectableItemBackground"
                    app:layout_constraintBottom_toBottomOf="@id/tv_no"
                    app:layout_constraintEnd_toEndOf="@id/tv_no"
                    app:layout_constraintStart_toStartOf="@id/tv_no"
                    app:layout_constraintTop_toTopOf="@id/tv_no" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>