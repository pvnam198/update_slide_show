<?xml version="1.0" encoding="utf-8"?>
<com.example.slide.framework.view.WidthFitSquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_margin="4dp"
    android:gravity="center_horizontal">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/btn_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/background_dark"
            tools:ignore="ContentDescription"/>

        <View
            android:id="@+id/view_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?selectableItemBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_color"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorItemSelected" />

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorSelectedCount"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/btn_icon"
            app:layout_constraintEnd_toEndOf="@+id/btn_icon"
            app:layout_constraintStart_toStartOf="@+id/btn_icon"
            app:layout_constraintTop_toTopOf="@+id/btn_icon"
            tools:text="1" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.example.slide.framework.view.WidthFitSquareLayout>

