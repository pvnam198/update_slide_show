<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/background_dark</item>
    </style>

    <style name="MyDarkToolbarStyle" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!--        <item name="android:colorBackground">@color/md_grey_800</item>-->
        <!--        <item name="android:textColor">@color/white</item>-->
    </style>

    <declare-styleable name="ScaleCardLayout">
        <attr name="aspectRatioWidth" format="integer" />
        <attr name="aspectRatioHeight" format="integer" />
    </declare-styleable>

    <declare-styleable name="CropperView">
        <attr name="grid_color" format="color" />
        <attr name="grid_thickness" format="dimension" />
        <attr name="grid_opacity" format="float" />
        <attr name="padding_color" format="color" />
        <attr name="nocropper__add_padding_to_make_square" format="boolean" />
        <attr name="nocropper__fit_to_center" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ColorSlider">
        <attr name="cs_colors" format="reference" />
        <attr name="cs_hex_colors" format="reference" />
        <attr name="cs_from_color" format="color" />
        <attr name="cs_to_color" format="color" />
        <attr name="cs_steps" format="integer" />
    </declare-styleable>
    <declare-styleable name="CarouselPicker">
        <attr name="item_width" format="integer" />
    </declare-styleable>
    <declare-styleable name="rtl_RecyclerTabLayout">
        <attr name="rtl_tabIndicatorColor" format="color" />
        <attr name="rtl_tabIndicatorHeight" format="dimension" />

        <attr name="rtl_tabBackground" format="reference" />

        <attr name="rtl_tabTextAppearance" format="reference" />
        <attr name="rtl_tabSelectedTextColor" format="color" />

        <attr name="rtl_tabOnScreenLimit" format="integer" />
        <attr name="rtl_tabMinWidth" format="dimension" />
        <attr name="rtl_tabMaxWidth" format="dimension" />

        <attr name="rtl_tabPaddingStart" format="dimension" />
        <attr name="rtl_tabPaddingTop" format="dimension" />
        <attr name="rtl_tabPaddingEnd" format="dimension" />
        <attr name="rtl_tabPaddingBottom" format="dimension" />
        <attr name="rtl_tabPadding" format="dimension" />

        <attr name="rtl_scrollEnabled" format="boolean" />

    </declare-styleable>
    <declare-styleable name="StickerView">
        <attr name="showIcons" format="boolean" />
        <attr name="showBorder" format="boolean" />
        <attr name="bringToFrontCurrentSticker" format="boolean" />
        <attr name="borderColor" format="color" />
        <attr name="borderAlpha" format="integer" />
    </declare-styleable>
    <declare-styleable name="PhotoEditorView">
        <!-- {@deprecated Use photo_src instead.} -->
        <attr name="photo_src" format="integer" />
    </declare-styleable>
    <color name="ball1">#FFD91C</color>
    <color name="ball2">#FF4B4A</color>
    <color name="ball3">#3D8EFF</color>

    <integer-array name="colors">
        <item>@color/ball1</item>
        <item>@color/ball2</item>
        <item>@color/ball3</item>
    </integer-array>

    <declare-styleable name="MaskImage">
        <!-- Identifier for the image that represents the Imageview's content. -->
        <attr name="image" format="reference" />
        <!-- crop Imageview's content same as mask -->
        <attr name="mask" format="reference" />
        <!-- Background Image -->
        <attr name="frame" format="reference" />
    </declare-styleable>

    <declare-styleable name="PuzzleView">
        <attr name="line_size" format="integer" />
        <attr name="line_color" format="color" />
        <attr name="selected_line_color" format="color" />
        <attr name="handle_bar_color" format="color" />
        <attr name="need_draw_line" format="boolean" />
        <attr name="need_draw_outer_line" format="boolean" />
        <attr name="piece_padding" format="dimension" />
        <attr name="animation_duration" format="integer" />
        <attr name="radian" format="float" />
    </declare-styleable>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/background_dark</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="CustomSwitchTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- Active thumb color & Active track color(30% transparency) -->
        <item name="colorControlActivated">@color/colorBlue</item>
        <!-- Inactive thumb color -->
        <item name="colorSwitchThumbNormal">#E0E0E0</item>
        <!-- Inactive track color(30% transparency) -->
        <item name="android:colorForeground">#757575</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_9ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>